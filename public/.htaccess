RewriteEngine On

# 1) Arquivos físicos (JS, CSS, imagens, .php)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 2) Diretórios físicos
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Rotas da API (Slim)
RewriteCond %{REQUEST_URI} ^/api(/.*)?$
RewriteRule ^ index.php [QSA,L]

# 4) Vue SPA — qualquer rota que não seja arquivo/diretório vai para index.php
RewriteRule ^ index.php [QSA,L]
